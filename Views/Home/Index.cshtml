@{
    ViewData["Title"] = "Shop by Category";

    var categoryImages = new List<(string FileName, string DisplayName)>
    {
        ("apple.jpg", "Apple"),
        ("banana.jpg", "Banana"),
        ("grape.jpg", "Grape"),
        ("orange.jpg", "Orange"),
        ("watermelon.jpg", "Watermelon"),
        ("pineapple.jpg", "Pineapple"),
        ("mango.jpg", "Mango"),
        ("strawberry.jpg", "Strawberry"),
        ("kiwi.jpg", "Kiwi"),
        ("blueberry.jpg", "Blueberry"),
        ("chicken.jpg", "Chicken"),
        ("beef.jpg", "Beef"),
        ("pork.jpg", "Pork"),
        ("lamb.jpg", "Lamb"),
        ("fish.jpg", "Fish"),
        ("carrot.jpg", "Carrot"),
        ("lettuce.jpg", "Lettuce"),
        ("tomato.jpg", "Tomato"),
        ("broccoli.jpg", "Broccoli"),
        ("cucumber.jpg", "Cucumber")
    };
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    .category-card img {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
    }
    .category-card {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        transition: transform 0.2s ease-in-out;
        background-color: #ffffff;
    }
    .category-card:hover {
        transform: scale(1.03);
    }
</style>

<div class="container mt-4 mb-5">
    <h2 class="text-center mb-4">🛒 Shop by Category</h2>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
        @foreach (var (fileName, displayName) in categoryImages)
        {
            <div class="col">
                <div class="card category-card text-center p-2">
                    <img src="/lib/images/@fileName" alt="@displayName" class="card-img-top mx-auto" />
                    <div class="card-body">
                        <h6 class="card-title">@displayName</h6>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
